<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_back_ground"
    android:paddingTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PictureTab">


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="266dp"
            android:layout_height="181dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:src="@drawable/upload_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtJobDescription"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edtJobLink"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Enter your job link"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivImage"
            app:layout_constraintVertical_bias="0.28" />

        <Button
            android:id="@+id/btnSharePicture"
            android:layout_width="308dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#3F51B5"
            android:elevation="10dp"
            android:text="Post "
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtJobLink"
            app:layout_constraintVertical_bias="0.149" />

        <EditText
            android:id="@+id/edtJobDescription"
            android:layout_width="320dp"
            android:layout_height="156dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Enter job description"
            android:inputType="textPersonName"
            android:textColorHint="#CCCCCC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtJobTitle" />

        <EditText
            android:id="@+id/edtJobTitle"
            android:layout_width="313dp"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Enter job title"
            android:inputType="textPersonName"
            android:textColorHint="#CCCCCC"
            app:layout_constraintBottom_toTopOf="@+id/edtJobDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>